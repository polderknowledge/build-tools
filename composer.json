{
    "name": "polderknowledge/build-tools",
    "type": "library",
    "description": "A set of tools we use to build our packages.",
    "keywords": [
        "polderknowledge",
        "build-tools"
    ],
    "homepage": "https://polderknowledge.com",
    "license": "MIT",
    "require": {
        "php": "~5.5|~7.0",
        "bitexpert/phing-securitychecker": "^0.2.1",
        "polderknowledge/coding-standards": "^1.1"
    },
    "autoload": {
        "psr-4": {
            "PolderKnowledge\\BuildTools\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "PolderKnowledge\\BuildToolsTest\\": "tests"
        }
    },
    "bin": [
        "bin/init-build.php"
    ],
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "config": {
        "optimize-autoloader": true,
        "process-timeout": 5000,
        "sort-packages": true
    }
}
