{
    "name": "polderknowledge/build-tools",
    "type": "library",
    "description": "A set of tools we use to build our packages.",
    "keywords": [
        "polderknowledge",
        "build-tools"
    ],
    "homepage": "https://polderknowledge.com",
    "license": "MIT",
    "require": {
        "php": "~5.6|~7.0",
        "polderknowledge/coding-standards": "^1.1"
    },
    "require-dev": {
        "phpunit/phpunit" : "~4.0||~5.0",
        "squizlabs/php_codesniffer": "^2.3"
    },
    "autoload": {
        "psr-4": {
            "PolderKnowledge\\BuildTools\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "PolderKnowledge\\BuildToolsTest\\": "tests"
        }
    },
    "bin": [
        "bin/init-build.php"
    ],
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests",
        "fix-style": "phpcbf -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "config": {
        "optimize-autoloader": true,
        "process-timeout": 5000,
        "sort-packages": true
    }
}
