{
    "name": "polderknowledge/build-tools",
    "type": "library",
    "description": "A set of tools we use to build our packages.",
    "keywords": [
        "polderknowledge",
        "build-tools"
    ],
    "homepage": "https://polderknowledge.com",
    "license": "MIT",
    "require": {
        "php": "~7.1",
        "bitexpert/phing-securitychecker": "^0.3.1",
        "polderknowledge/coding-standards": "^2.0"
    },
    "bin": [
        "bin/pk-init-build.php"
    ],
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "config": {
        "optimize-autoloader": true,
        "process-timeout": 5000,
        "sort-packages": true
    }
}
